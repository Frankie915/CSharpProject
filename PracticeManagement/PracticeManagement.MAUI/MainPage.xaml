<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticeManagement.MAUI.MainPage"
             Title="PracticePanther">

    <ScrollView>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1">

                <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

                    <Button
                        
                        HeightRequest="60"
                        Text="Manage Clients and Projects"
                        Clicked="ClientProjectClicked" >
                    </Button>

                    <Button
                        HeightRequest="60"
                        Text="Manage Employees"
                        Clicked="EmployeesClicked" />

                    <Button
                        HeightRequest="60"
                        Text="Enter Time"
                        Clicked="TimeClicked" />

                </VerticalStackLayout>
                
            </Grid>
        </Grid>
        
    </ScrollView>

</ContentPage>
